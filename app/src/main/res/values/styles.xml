<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#ff707070</item>
    </style>

    <style name="ajustesGrupo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff4eadff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/abc_action_bar_default_padding_material</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">40sp</item>
    </style>

    <style name="ajustesFilaPar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffececec</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:layout_alignParentBottom">false</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ajustesFilaImpar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffececec</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ff606060</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:layout_alignParentBottom">false</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ajustesTexto">
        <item name="android:textColor">#ffececec</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ajustesTextoAutoComplete">
        <item name="android:textColor">#ffececec</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColorHint">#ff606060</item>
    </style>

    <style name="division">
        <item name="android:layout_height">2sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#ffafafaf</item>
    </style>

    <style name="alertasTexto">
        <item name="android:background">@color/primary_material_dark</item>
        <item name="android:textColor">#ffececec</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_margin">@dimen/abc_action_bar_subtitle_bottom_margin_material</item>
    </style>
</resources>
